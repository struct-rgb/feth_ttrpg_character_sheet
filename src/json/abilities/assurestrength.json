{
    "name": "Assure Strength",
    "description": "Unit's strength-based attacks deal a minimum of Mt / 4 lethal damage on a hit (round up). (Depricated, use @{ability::Assurance} instead.)",
    "requires": "Level 5",
    "modifiers": {
        "hp": 0,
        "sp": 0,
        "str": 0,
        "mag": 0,
        "dex": 0,
        "spd": 0,
        "def": 0,
        "res": 0,
        "lck": 0,

        "mt": 0,
        "prot": 0,
        "resl": 0,
        "hit": 0,
        "avo": 0,
        "crit": 0,
        "cravo": 0,

        "minrng": 0,
        "maxrng": 0,

        "tpcost": 0,
        "spcost": 0,
        "tp": 0,
        "sp": 0,

        "mov": 0
    },
    
    "rows": [
        {
            "name": "Minimum Damage",
            "when": "unit|total|mttype == mttype|str",
            "expr": "ceil((unit|total|mt) / 4)",
            "roll": false
        }
    ],

    "comment": "Items in modifers can either be integers or string expressions",
    "tags": ["assure", "chance", "depricated"],
    "hidden": true
}
